<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:paddingTop="10dip"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Working with Client Side code"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-medium"
        android:textSize="20dip"
        android:paddingBottom="10dip"
        />
    <LinearLayout
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="10dip"
         >
        <TextView
            android:layout_marginTop="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dip"
            android:text="Here's what you can do:"
            android:layout_marginBottom="20dip"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Clone the code from git:\n
            https://github.com/deshpr/IotWifiCam_Client.git"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textAlignment="center"

            android:textSize="18dip"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn how the client works, and write your own by following the tutorial at\n
            http://data.windowsazure.com/"
            />
    <TextView
        android:textSize="15dip"
        android:id="@+id/displayLinks"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />
    </LinearLayout>

</LinearLayout>